generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Locale {
  sv
  en
}

enum KidStatus {
  UNLOCKED
  LOCKED
  REPAIR
}

enum EventType {
  WARNING
  INFO
  TIP
  NEIGHBOUR_WATCH
}

enum EventStatus {
  PENDING
  APPROVED
  REJECTED
  RESOLVED
  ARCHIVED
}

model Guardian {
  id        String   @id @default(cuid())
  clerkId   String?  @unique
  email     String?
  name      String?
  locale    Locale   @default(sv)
  kids      Kid[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Kid {
  id                 String        @id @default(cuid())
  name               String
  pinHash            String
  locale             Locale        @default(sv)
  status             KidStatus     @default(LOCKED)
  currentLessonOrder Int           @default(1)
  guardianId         String
  guardian           Guardian      @relation(fields: [guardianId], references: [id], onDelete: Cascade)
  quizAttempts       QuizAttempt[]
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  @@index([guardianId])
}

model Lesson {
  id           String              @id @default(cuid())
  order        Int                 @unique
  translations LessonTranslation[]
  questions    QuizQuestion[]
  createdAt    DateTime            @default(now())
}

model LessonTranslation {
  id        String   @id @default(cuid())
  lessonId  String
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  locale    Locale
  title     String
  summary   String?
  contentMd String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([lessonId, locale])
  @@index([lessonId])
}

model QuizQuestion {
  id           String                     @id @default(cuid())
  lessonId     String
  lesson       Lesson                     @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  order        Int
  correctIndex Int
  translations QuizQuestionTranslation[]
  attempts     QuizAttempt[]
  createdAt    DateTime                   @default(now())
  updatedAt    DateTime                   @updatedAt

  @@unique([lessonId, order])
  @@index([lessonId])
}

model QuizQuestionTranslation {
  id          String       @id @default(cuid())
  questionId  String
  question    QuizQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  locale      Locale
  prompt      String       @db.Text
  optionA     String
  optionB     String
  optionC     String
  optionD     String
  explanation String?      @db.Text
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([questionId, locale])
  @@index([questionId])
}

model QuizAttempt {
  id         String       @id @default(cuid())
  kidId      String
  kid        Kid          @relation(fields: [kidId], references: [id], onDelete: Cascade)
  questionId String
  question   QuizQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  answer     Int
  correct    Boolean
  createdAt  DateTime     @default(now())

  @@index([kidId])
  @@index([questionId])
}

model Area {
  id        String      @id @default(cuid())
  name      String
  slug      String      @unique
  lat       Float?
  lng       Float?
  events    AreaEvent[]
  createdAt DateTime    @default(now())
}

model AreaEvent {
  id          String      @id @default(cuid())
  areaId      String
  area        Area        @relation(fields: [areaId], references: [id])
  type        EventType   @default(INFO)
  status      EventStatus @default(PENDING)
  title       String
  description String?     @db.Text
  severity    Int         @default(1)
  reporterName String?
  createdAt   DateTime    @default(now())
  resolvedAt  DateTime?

  @@index([areaId])
  @@index([createdAt])
}

model BorisLog {
  id        String   @id @default(cuid())
  sessionId String?
  locale    String   @default("sv")
  prompt    String   @db.Text
  response  String   @db.Text
  provider  String   @default("stub")
  mood      String?
  createdAt DateTime @default(now())
}
