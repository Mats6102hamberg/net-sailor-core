generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Locale {
  sv
  en
}

enum KidStatus {
  UNLOCKED
  LOCKED
  REPAIR
}

model Guardian {
  id        String   @id @default(cuid())
  clerkId   String?  @unique
  email     String?
  name      String?
  locale    Locale   @default(sv)
  kids      Kid[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Kid {
  id                 String    @id @default(cuid())
  name               String
  pinHash            String
  status             KidStatus @default(UNLOCKED)
  currentLessonOrder Int       @default(1)
  guardianId         String
  guardian           Guardian  @relation(fields: [guardianId], references: [id])
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  @@index([guardianId])
}

model Lesson {
  id           String              @id @default(cuid())
  order        Int                 @unique
  translations LessonTranslation[]
  createdAt    DateTime            @default(now())
}

model LessonTranslation {
  id        String @id @default(cuid())
  lessonId  String
  lesson    Lesson @relation(fields: [lessonId], references: [id])
  locale    Locale
  title     String
  summary   String
  contentMd String @db.Text

  @@unique([lessonId, locale])
}

model Area {
  id        String      @id @default(cuid())
  name      String
  slug      String      @unique
  lat       Float?
  lng       Float?
  events    AreaEvent[]
  createdAt DateTime    @default(now())
}

model AreaEvent {
  id          String   @id @default(cuid())
  areaId      String
  area        Area     @relation(fields: [areaId], references: [id])
  type        String
  title       String
  description String?  @db.Text
  severity    Int      @default(1)
  createdAt   DateTime @default(now())

  @@index([areaId])
}

model BorisLog {
  id        String   @id @default(cuid())
  sessionId String?
  locale    String   @default("sv")
  prompt    String   @db.Text
  response  String   @db.Text
  provider  String   @default("stub")
  mood      String?
  createdAt DateTime @default(now())
}
